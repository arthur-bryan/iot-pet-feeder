// secrets.h.example
// Copy this file to secrets.h and fill in your actual values
// secrets.h is in .gitignore and will NOT be committed

#ifndef SECRETS_H
#define SECRETS_H

// WiFi Credentials
const char* WIFI_SSID = "YOUR_WIFI_SSID";
const char* WIFI_PASSWORD = "YOUR_WIFI_PASSWORD";

// AWS IoT Core Configuration
const char* THING_NAME = "YOUR_THING_NAME";  // Example: iot-pet-feeder-device-dev
const char* AWS_IOT_ENDPOINT = "YOUR_IOT_ENDPOINT";  // Example: a1mm0cek76sanp-ats.iot.us-east-2.amazonaws.com

// AWS Root CA Certificate (Amazon Root CA 1)
// Download from: https://www.amazontrust.com/repository/AmazonRootCA1.pem
const char AWS_CERT_CA[] = R"EOF(
-----BEGIN CERTIFICATE-----
PASTE_AMAZON_ROOT_CA1_CERTIFICATE_HERE
-----END CERTIFICATE-----
)EOF";

// AWS IoT Device Certificate
// Get from AWS IoT Core Console or AWS Secrets Manager
// Secret name: iot-pet-feeder/iot-pet-feeder-device-dev/certificate_pem
const char AWS_CERT_CRT[] = R"EOF(
-----BEGIN CERTIFICATE-----
PASTE_YOUR_DEVICE_CERTIFICATE_HERE
-----END CERTIFICATE-----
)EOF";

// AWS IoT Device Private Key
// Get from AWS IoT Core Console or AWS Secrets Manager
// Secret name: iot-pet-feeder/iot-pet-feeder-device-dev/private_key_pem
const char AWS_CERT_PRIVATE[] = R"EOF(
-----BEGIN RSA PRIVATE KEY-----
PASTE_YOUR_DEVICE_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----
)EOF";

#endif
